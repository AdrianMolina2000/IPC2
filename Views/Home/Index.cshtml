@model IPC2.Models.Archi

@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="icon" type="image/png" href="../Images/icon.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            text-align: center;
            background: url("../Images/fondo.jpg") 0px 0px no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .padd {
            padding-top: 100px;
        }

        .padd2 {
            padding: 10px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Othello</a>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0 ">
                <li class="nav-item active">
                    @Html.ActionLink("Lista de Usuarios", "Index", "Usuarios", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Registrarse", "Nuevo", "Usuarios", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Cerrar Sesion", "Logout", "Cerrar", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content padd">
        <div class="row">
            <div class="col-md-4 bg-dark">
                <h2 class="text-white padd2">Jugar Solo</h2>
                <p class="padd2"><a class="btn btn-light" href="~/Jugar/Single2">Jugar <i class="fas fa-dice-one"></i></a></p>
            </div>
            <div class="col-md-4 bg-light">
                <h2 class="padd2">Multijugador</h2>
                <p class="padd2"><a class="btn btn-dark" href="~/Jugar/single">Jugar <i class="fas fa-dice-two"></i></a></p>
            </div>
            <div class="col-md-4 bg-dark">
                <h2 class="text-white padd2">Torneo</h2>
                <p class="padd2"><a class="btn btn-light" href="#">Jugar <i class="fas fa-dice"></i></a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 bg-light">
                <h2 class="padd2">Cargar Partida</h2>
                <p class="padd2"><a class="btn btn-dark" href="~/Jugar/Cargar">Subir Tablero<i class="fas fa-file-upload"></i></a></p>
            </div>

            <div class="col-md-4 bg-dark">
                <h2 class="text-white padd2">Guardar Partida</h2>
                @using (Html.BeginForm("GuardarTablero", "Jugar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="submit" value="Guardar"class="btn btn-light" />
                }
            </div>
            <div class="col-md-4 bg-light">
                <h2 class="padd2">Reportes</h2>
                <p class="padd2"><a class="btn btn-dark" href="#">Generar Reportes <i class="fas fa-file-code"></i></a></p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
