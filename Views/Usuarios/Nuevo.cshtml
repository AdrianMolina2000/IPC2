@model IPC2.Models.ViewModels.TablaViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nuevo","Usuarios", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12">
        <div>
            @Html.LabelFor(d => d.Nickname)
            @Html.TextBoxFor(d => d.Nickname, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Nickname, null, new { @class = "red" })
        </div>
        <div>
            @Html.LabelFor(d => d.PrimerNombre)
            @Html.TextBoxFor(d => d.PrimerNombre, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.PrimerNombre, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.SegundoNombre)
            @Html.TextBoxFor(d => d.SegundoNombre, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.SegundoNombre, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.PrimerApellido)
            @Html.TextBoxFor(d => d.PrimerApellido, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.PrimerApellido, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.SegundoApellido)
            @Html.TextBoxFor(d => d.SegundoApellido, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.SegundoApellido, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.FechaNacimiento)<br />
            @Html.EditorFor(d => d.FechaNacimiento, "", new { @class = "form-control" })<br />
            @Html.ValidationMessageFor(d => d.FechaNacimiento, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.Pais)
            @Html.TextBoxFor(d => d.Pais, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Pais, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.Password)
            @Html.TextBoxFor(d => d.Password, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Password, null, new { @class = "red" })

        </div>
        <div>
            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Email, null, new { @class = "red" })
        </div>
            <div style="text-align:right;">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>

        </div>
    </div>
}
