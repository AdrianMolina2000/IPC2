@{
    List<IPC2.Models.Fichas> fichasVector = Model;


    bool buscar(string fila, string columna, List<IPC2.Models.Fichas> lista)
    {
        bool bandera = false;
        foreach (var item in lista)
        {
            if (item.fila == fila && item.columna == columna)
            {
                bandera = true;
                return bandera;
            }
            else
            {
                bandera = false;
            }
        }
        return bandera;
    }

    IPC2.Models.Fichas devolver(string fila, string columna, List<IPC2.Models.Fichas> lista)
    {
        IPC2.Models.Fichas ficha = null;
        foreach (var item in lista)
        {
            if (item.columna == columna && item.fila == fila)
            {
                ficha = item;
            }
        }

        return ficha;
    }
}
<main id="Tablero" class="bg-dark">
    <div class="fila font-weight-bold text-black">
        <div class="casilla dentro border-0"></div>
        <div class="casilla dentro border-0">1</div>
        <div class="casilla dentro border-0">2</div>
        <div class="casilla dentro border-0">3</div>
        <div class="casilla dentro border-0">4</div>
        <div class="casilla dentro border-0">5</div>
        <div class="casilla dentro border-0">6</div>
        <div class="casilla dentro border-0">7</div>
        <div class="casilla dentro border-0">8</div>
        <div class="casilla dentro border-0"></div>
    </div>

    @{
        string[] letras = { "A", "B", "C", "D", "E", "F", "G", "H" };

        for (int i = 0; i < letras.Length; i++)
        {
            <div class="fila font-weight-bold text-black">
                <div class="casilla dentro border-0">@letras[i]</div>

                @for (int j = 0; j < letras.Length; j++)
                {

                    if (buscar(j.ToString(), i.ToString(), fichasVector))
                    {
                        IPC2.Models.Fichas ficha = devolver(j.ToString(), i.ToString(), fichasVector);

                        if (ficha.color.Equals("negro"))
                        {
                            <button type="submit" class="casilla dentro"><i class="fas fa-circle"></i></button>
                        }
                        else
                        {
                            <button type="submit" class="casilla dentro"><i class="fas fa-circle white"></i></button>
                        }
                    }
                    else
                    {
                        if (fichasVector[fichasVector.Count - 1].color == "blanco")
                        {
                            <form method="post">
                                <button type="submit" class="casilla dentro"></button>
                                <input type="hidden" name="fila" value="@j">
                                <input type="hidden" name="columna" value="@i">
                                <input type="hidden" name="color" value="negro">
                            </form>
                        }
                        else
                        {
                            <form method="post">
                                <button type="submit" class="casilla dentro"></button>
                                <input type="hidden" name="fila" value="@j">
                                <input type="hidden" name="columna" value="@i">
                                <input type="hidden" name="color" value="blanco">
                            </form>
                        }
                    };
                }

                <div class="casilla dentro border-0">@letras[i]</div>
            </div>
        }
    }

    <div class="fila font-weight-bold text-black">
        <div class="casilla dentro border-0"></div>
        <div class="casilla dentro border-0">1</div>
        <div class="casilla dentro border-0">2</div>
        <div class="casilla dentro border-0">3</div>
        <div class="casilla dentro border-0">4</div>
        <div class="casilla dentro border-0">5</div>
        <div class="casilla dentro border-0">6</div>
        <div class="casilla dentro border-0">7</div>
        <div class="casilla dentro border-0">8</div>
        <div class="casilla dentro border-0"></div>
    </div>
</main>